/* General Body Styles */
body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f9;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  min-height: 100vh;
  flex-direction: column;
  gap: 2rem;
}

/* Header Styles */
h2 {
  color: #333;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

/* Form Styles */
form {
  background-color: #fff;
  padding: 1.5rem;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 500px;
}

form input {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  font-size: 1rem;
}

form button {
  padding: 10px 15px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s;
}

form button:hover {
  background-color: #45a049;
}

form .error {
  color: red;
  font-size: 0.875rem;
}

form .success-message {
  color: green;
  font-size: 1rem;
  margin-top: 1rem;
}

/* List Styles */
ul {
  list-style-type: none;
  padding: 0;
}

ul li {
  background-color: #fff;
  padding: 10px;
  margin: 10px 0;
  border-radius: 4px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

ul li button {
  margin-left: 10px;
  padding: 5px 10px;
  background-color: #ff9800;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 0.875rem;
  transition: background-color 0.3s;
}

ul li button:hover {
  background-color: #e68900;
}

ul li button:last-child {
  background-color: #f44336;
}

ul li button:last-child:hover {
  background-color: #e01f2f;
}

/* Payment Form Styles */
.container {
  width: 100%;
  max-width: 800px;
  margin: 2rem auto;
}

.container form {
  padding: 2rem;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.container form div {
  margin-bottom: 15px;
}

.container form label {
  display: block;
  margin-bottom: 5px;
  font-weight: bold;
}

.container form input {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.container form .submit-payment {
  background-color: #2196F3;
  color: white;
  padding: 12px 20px;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  cursor: pointer;
  transition: background-color 0.3s;
}

.container form .submit-payment:hover {
  background-color: #1e88e5;
}

.container form .error {
  color: red;
  font-size: 0.875rem;
}

.container form .success-message {
  color: green;
  font-size: 1rem;
}

/* Order Tracking Styles */
.container ul li {
  background-color: #fff;
  padding: 12px;
  margin: 10px 0;
  border-radius: 4px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.container ul li button {
  margin-left: 10px;
  padding: 5px 10px;
  background-color: #ff9800;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 0.875rem;
  transition: background-color 0.3s;
}

.container ul li button:hover {
  background-color: #e68900;
}

.container ul li button:last-child {
  background-color: #f44336;
}

.container ul li button:last-child:hover {
  background-color: #e01f2f;
}
